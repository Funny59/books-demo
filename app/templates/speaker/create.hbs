<div class="container h-100">
  {{!-- template-lint-disable no-html-comments --}}
  <div class="htop">
    <h2 class="text-center">Добавление спикера</h2>
    <form class="edit-form" onsubmit={{action "createSpeaker"}}>
      <div class="form-group row">
        <label for="inputSurname" class="col-sm-2 col-form-label">Фамилия:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" placeholder="Введите фамилию" value=model.lastName}}
          <!--input type="text" class="form-control form-control-lg" placeholder="Введите фамилию" value={{model.lastName}}-->
        </div>
      </div>
      <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Имя:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" placeholder="Введите имя" value=model.firstName}}
          <!--input type="text" class="form-control form-control-lg" placeholder="Введите имя" value={{model.firstName}}-->
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPatronymic" class="col-sm-2 col-form-label big">Отчество:</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" placeholder="Введите отчество" value=model.secondName}}
          <!--input type="text" class="form-control form-control-lg" placeholder="Введите отчество" value={{model.secondName}}-->
        </div>
      </div>
      <div class="form-group row">
        <div class="col-6">
          <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
        </div>
        <div class="col-6 text-right">
          {{#link-to "speakers" tagName="div" class="btn btn-outline-secondary btn-lg"}}
            Отмена
          {{/link-to}}
        </div>
      </div>
    </form>
  </div>
</div>